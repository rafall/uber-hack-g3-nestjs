{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@controllers": ["controllers"],
      "@services/*": ["services/*"],
      "@services": ["services"],
      "@models/*": ["models/*"],
      "@models": ["models"],
      "@dtos/*": ["dtos/*"],
      "@dtos": ["dtos"]
    }
  },
  "exclude": ["node_modules"],
  
}
